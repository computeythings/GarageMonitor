<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_server_dialog_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/server_name_value"
        android:text="Connection name:" />

    <EditText
        android:id="@+id/server_name_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Optional"
        android:inputType="text" />

    <TextView
        android:id="@+id/add_server_dialog_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/server_address_value"
        android:text="Server address:" />

    <EditText
        android:id="@+id/server_address_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/add_server_dialog_apikey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/apikey_value"
        android:text="API Key:" />

    <EditText
        android:id="@+id/apikey_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/add_server_dialog_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/port_value"
        android:text="Port:" />

    <EditText
        android:id="@+id/port_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Default: 4444"
        android:inputType="number" />

    <TextView
        android:id="@+id/add_server_dialog_cert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/cert_value"
        android:text="Cert Location:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/cert_value"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:editable="false"
            android:focusable="false"
            android:scrollHorizontally="true"
            android:maxLines="1"/>
        <Button
            android:id="@+id/cert_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"/>

    </LinearLayout>
</LinearLayout>