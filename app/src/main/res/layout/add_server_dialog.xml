<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_server_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_gravity="center"
        android:text="Add A Server" />

    <TextView
        android:labelFor="@id/server_nickname"
        android:id="@+id/add_server_dialog_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection name:" />

    <EditText
        android:id="@+id/server_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/add_server_dialog_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/server_name_value"
        android:text="Server address:" />

    <EditText
        android:id="@+id/server_name_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/add_server_dialog_apikey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/apikey_value"
        android:text="API Key:" />

    <EditText
        android:id="@+id/apikey_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/add_server_dialog_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/port_value"
        android:text="Port:" />

    <EditText
        android:id="@+id/port_value"
        android:hint="Default: 4444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/add_server_dialog_cert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cert Location:" />
</LinearLayout>